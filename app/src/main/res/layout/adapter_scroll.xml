<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:background="@drawable/riple_white_button"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/item_name"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDataStart"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="130dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Дата создания"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

    <TextView
        android:id="@+id/textDataChanges"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="130dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Дата изменения"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDataStart" />

    <TextView
        android:id="@+id/item_date_changes"
        android:layout_width="218dp"
        android:layout_height="13dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textDataChanges"
        app:layout_constraintTop_toBottomOf="@+id/item_date_start" />

    <TextView
        android:id="@+id/item_date_start"
        android:layout_width="218dp"
        android:layout_height="13dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textDataStart"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>